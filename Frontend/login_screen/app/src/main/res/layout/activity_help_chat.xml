<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_help_chat_entrance"
    tools:context=".HelpChatWebSocket.HelpChatActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/gradient_background_help_chat_entrance"
        app:layout_constraintBottom_toTopOf="@+id/et2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tx1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please state your issue and Admin will help you shortly!"
            android:textColor="#000000"
            android:textSize="34dp" />
    </ScrollView>

    <EditText
        android:id="@+id/et2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="651dp"
        android:layout_marginBottom="404dp"
        android:background="@drawable/edittext_design"
        android:hint="Message..."
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt2"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="739dp"
        android:layout_marginBottom="306dp"
        android:backgroundTint="#1B5E20"
        android:text="SEND"
        android:textSize="40sp"
        app:fontFamily="@font/smash_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/disconnectBtn"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="854dp"
        android:layout_marginBottom="191dp"
        android:backgroundTint="#1B5E20"
        android:text="DISCONNECT"
        android:textSize="40sp"
        app:fontFamily="@font/smash_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
