<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_home"
    tools:context="SocialTab.SocialActivity"
    tools:ignore="MissingDefaultResource">


    <ImageView
        android:id="@+id/settingsBtn"
        android:layout_width="126dp"
        android:layout_height="129dp"
        android:layout_marginStart="687dp"
        android:layout_marginTop="49dp"
        android:layout_marginBottom="1147dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.042"
        app:srcCompat="@drawable/settingss" />

    <Button
        android:id="@+id/socialBtn"
        android:layout_width="166dp"
        android:layout_height="83dp"
        android:layout_marginStart="364dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="782dp"
        android:backgroundTint="#6378E6"
        android:fontFamily="@font/smash_tv"
        android:text="Social"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.709"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.096" />

    <Button
        android:id="@+id/theatersBtn"
        android:layout_width="166dp"
        android:layout_height="83dp"
        android:layout_marginStart="246dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="236dp"
        android:layout_marginBottom="782dp"
        android:backgroundTint="#8D93FF"
        android:fontFamily="@font/smash_tv"
        android:text="Theaters"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.094" />

    <Button
        android:id="@+id/moviesBtn"
        android:layout_width="166dp"
        android:layout_height="83dp"
        android:layout_marginStart="126dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="354dp"
        android:layout_marginBottom="782dp"
        android:backgroundTint="#8D93FF"
        android:fontFamily="@font/smash_tv"
        android:text="Movies"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.299"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.093" />

    <Button
        android:id="@+id/homeBtn"
        android:layout_width="166dp"
        android:layout_height="83dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="474dp"
        android:layout_marginBottom="845dp"
        android:backgroundTint="#8D93FF"
        android:fontFamily="@font/smash_tv"
        android:text="Home"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.108"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.108" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.149"
        app:layout_constraintStart_toStartOf="@id/homeBtn"
        app:layout_constraintTop_toTopOf="@id/homeBtn"
        app:layout_constraintVertical_bias="0.612" />

    <EditText
        android:id="@+id/friendUsernameTextView"
        android:layout_width="320dp"
        android:layout_height="63dp"
        android:hint="Add a friend here!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.194"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.287" />

    <Button
        android:id="@+id/addBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#A9A3FF"
        android:fontFamily="@font/smash_tv"
        android:text="Add Friend"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.692"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.291" />

    <Button
        android:id="@+id/chatRoomBtn"
        android:layout_width="256dp"
        android:layout_height="57dp"
        android:backgroundTint="#A9A3FF"
        android:fontFamily="@font/smash_tv"
        android:text="Chat Room"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.223" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="273dp"
        android:layout_height="35dp"
        android:text="Your friends:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.173"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.358" />

</androidx.constraintlayout.widget.ConstraintLayout>
