<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_settings"
    tools:context="SettingsTab.AdminActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="245dp"
        android:layout_marginTop="109dp"
        android:layout_marginEnd="248dp"
        android:layout_marginBottom="902dp"
        android:text="Admin Page"
        android:textColor="@color/white"
        app:fontFamily="@font/smash_tv"
        android:textSize="100sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnMuteUsers"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="675dp"
        app:fontFamily="@font/smash_tv"
        android:backgroundTint="#2C2C2C"
        android:text="Mute Users"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnViewReviews"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="752dp"
        android:layout_marginBottom="223dp"
        android:backgroundTint="#2C2C2C"
        app:fontFamily="@font/smash_tv"
        android:text="View Reviews"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/changeEmailBtn"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="451dp"
        android:layout_marginBottom="524dp"
        android:backgroundTint="#2C2C2C"
        app:fontFamily="@font/smash_tv"
        android:text="Change User Email"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/changeUserBtn"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="600dp"
        android:layout_marginBottom="375dp"
        android:backgroundTint="#2C2C2C"
        app:fontFamily="@font/smash_tv"
        android:text="Change User's Username"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
