<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_settings"
    tools:context="SettingsTab.SettingsActivity">

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="527dp"
        android:layout_marginBottom="156dp"
        android:backgroundTint="#2C2C2C"
        app:fontFamily="@font/smash_tv"
        android:text="LOG OUT"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.836"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/accountInfoButton"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/logoutButton"
        android:layout_marginTop="341dp"
        android:layout_marginBottom="342dp"
        android:backgroundTint="#2C2C2C"
        android:text="ACCOUNT INFO"
        app:fontFamily="@font/smash_tv"
        android:textSize="40dp"
        app:icon="@android:drawable/ic_dialog_info"
        app:iconSize="40dp"
        app:iconPadding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/submitTicketButton"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/accountInfoButton"
        android:layout_marginTop="259dp"
        android:layout_marginBottom="424dp"
        android:backgroundTint="#2C2C2C"
        android:text="HELP CHAT"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="40dp"
        app:fontFamily="@font/smash_tv"
        app:icon="@android:drawable/stat_sys_headset"
        app:iconPadding="8dp"
        app:iconSize="40dp"
        app:iconTintMode="src_in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.295" />

    <Button
        android:id="@+id/adminButton"
        android:layout_width="113dp"
        android:layout_height="82dp"
        android:layout_marginStart="279dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="667dp"
        android:backgroundTint="#2C2C2C"
        android:text="ADMIN"
        app:fontFamily="@font/smash_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.122"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="81dp"
        android:layout_height="83dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="323dp"
        android:layout_marginBottom="656dp"
        android:clickable="true"
        android:contentDescription="Back Arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.028"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.033"
        app:srcCompat="@drawable/backarrow" />
</androidx.constraintlayout.widget.ConstraintLayout>
